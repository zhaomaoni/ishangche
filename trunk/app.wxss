/* 打开app */
.open_app{ 
  width: 32.5%;
  height: 11.7vw;
  line-height: 11.7vw;
  text-align: center;
  background: #060606;
  color: #FFD98B;
  position: fixed;
  right: 0;
  bottom: 39.2vw;
  font-size: 4.3vw;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;
}


/* loading */
.loading_box{
  width: 20vw;
  height: 13vw;
  margin: 0 auto;
  overflow: hidden;
}
.loading_box image{
  width: 100%;
  height: 100%;
}