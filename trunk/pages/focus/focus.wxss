/* 个人信息详情 */
.focus_user_box{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.focus_head_box{
  width: 15.5vw;
  height: 15.5vw;
  margin: 0 auto;
  position: relative;
  margin-top: 5.3vw;
}
.focus_head_box .focus_pic1{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.focus_head_box .focus_pic2{
  width: 4.27vw;
  height: 4.27vw;
  position: absolute;
  right: 0;
  bottom: 0;
}
.title_focus_box{
  width: 100%;
  font-size: 4.27vw;
  padding: 2vw 0;
  text-align: center;
}
.main_focus_box{
  width: 92%;
  color: #999999;
  margin: 0 auto;
  font-size: 3.2vw;
  text-align: center;
  margin-bottom: 8vw;
}
/* 历史资讯 */
.content_title{
  width: 92%;
  margin: 0 auto;
  font-size: 4.27vw;
  text-indent: 1.87vw;
  margin-bottom: 4vw;
  font-weight:500;
}
.content_main_box{
  width: 92%;
  margin: 0 auto;
  height: auto;
  overflow: hidden;
  margin-bottom:8vw;
}
.main_pic_box{
  width: 100%;
  height: 52vw;
  border-radius: 4.27vw;
  overflow: hidden;
  margin-bottom: 2.7vw;
  position: relative
}
.main_pic_box image{
  width: 100%;
  height: 100%;
  border-radius:4.27vw;
}
.main_pic_box .video-play-btn{
  width:16vw;
  height:16vw;
  position:absolute;
  left:50%;
  top:50%;
  margin-left:-8vw;
  margin-top:-8vw;
}
.main_title_box{
  width: 100%;
  color: #333;
  font-size: 4.3vw;
  line-height: 5.9vw;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.main_number_box{
  width: 100%;
  overflow: hidden;
  height: 4.5vw;
  color: #999999;
  font-size: 3.2vw;
  margin-top: 1.5vw;
}
.main_number_box .main_from{
  float: left;
}
.main_number_box .number_type{
  float: right;
  height: 3.72vw;
}
.number_type .number_msg{
  float: left;
  height: 3.72vw;
  margin-left: 3vw;
}
.number_msg image{
  width: 3.72vw;
  height: 3.73vw;
  vertical-align: middle;
}
.number_msg text{
  line-height: 3.72vw
}