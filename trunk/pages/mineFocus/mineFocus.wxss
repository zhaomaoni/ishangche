/* pages/mineFocus/mineFocus.wxss */
.mine_focue_box{
  width: 92%;
  height: 24vw;
  margin: 0 auto;
  /* display: flex; */
  overflow: hidden;
  border-bottom: 1px solid #f4f4f4;
}
.mine_focue_box:last-child{
  border-bottom: 0;
}
.mine_focue_box .focue_head{
  width: 15.5vw;
  height: 15.5vw;
  border-radius:100vw;
  vertical-align: middle;
  margin:4.25vw 0;
  float: left
}
.text_focus{
  /* flex: 1; */
  font-size: 4.27vw;
  color: #333333;
  margin-top:4.25vw;
  margin-left: 18vw;
}
.text_focus view:first-child{
  padding-top: 1.87vw;
}
.text_focus view:last-child{
  color: #999999;
  font-size: 3.2vw;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-top: 1.3vw
}
.mine_focue_box .focue_right{
  width: 2.1vw;
  height: 3.5vw;
  float: right;
  margin-top: 10.25vw;
  margin-right: 4.27vw;
}