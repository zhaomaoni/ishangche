/* pages/moreDetails/moreDetails.wxss */
.ping_lun_box{
  width: 100%;
  margin-bottom: 25vw
}
.no_have_ping{
  text-align: center;
  color: #999;
  margin: 12.8vw 0 40vw 0;
  font-size: 4.27vw;
}
.have_ping_box{
  width: 100%;
  overflow: hidden;
  margin-top:5.3vw;
}
.user_ping_box{
  width: 92%;
  margin: 0 auto;
  display: flex;
  margin-bottom:4vw;
}
.ping_user_header{
  width: 9.1vw;
  height: 9.1vw;
  border-radius: 100px;
  overflow: hidden;
  margin-right: 2.7vw;
}
.ping_user_header image{
  width: 100%;
  height: 100%
}
.ping_user_name{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.user_name_msg{
  font-size: 3.73vw;
  line-height: 5.3vw;
  color: #333;
  margin-bottom:2vw;
}
.user_name_msg text{
  display: block;
}
.user_name_msg text:last-child{
  font-size: 2.7vw;
  color: #888
}
.first_user_ping{
  font-size: 4.27vw;
  margin-bottom: 4vw;
  color: #333;
}
.three_ping_msg{
  width: 100%;
  background: #f6f6f6;
  border-radius: 2.13vw;
  padding:3vw 0;
}
.three_msg_lun{
  width: 94%;
  margin: 0 auto;
  font-size: 4.27vw;
  padding-bottom: 2.7vw;
  color: #333;
}
.three_msg_lun text{
  color:#EAA556;
}
.all_ping_msg{
  width:94%;
  font-size:3.2vw;
  color:#EAA556;
  margin:0 auto;
}
.all_ping_msg image{
  width:4vw;
  height:2.6vw;
}
.more_bg{
  background:#f6f6f6f6;
  margin-bottom:1vw;
  padding:3.2vw 4%;
  width:100%;
}