/* pages/index/index.wxss *//* tab导航 */
.art_header{
  width: 100%;
  height: 11.7vw;
  line-height: 11.7vw;
  overflow: hidden;
  position:fixed;
  top:0;
  background: #ffffff;
  z-index: 999
}
.art_img{
  width: 10.13vw;
  height: 10.13vw;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  margin-left: 4vw;
  margin-right: 15.5vw;
  background: #ccc;
}
.art_img navigator{
  width: 100%;
  height: 100%;
}
.art_img navigator image{
  width: 100%;
  height: 100%;
}
.art_lis{
  float: left
}
.art_lis text{
  margin-right: 8vw;
  font-size: 3.73vw;
}
.art_lis .active{
  font-weight: bold;
}
/* tab内容 */
.art_main{
  width: 92%;
  margin: 0 auto;
  margin-top: 31.9vw;
}
/* 资讯列表 */
.art_content_box{
  width:100%;
  height: auto;
  margin-bottom: 8vw;
}
.art_content_img{
  width: 100%;
  height: 52vw;
  overflow: hidden;
  border-radius: 4.2vw;
  position: relative
}
.art_content_img image{
  width: 100%;
}
.art_content_img video{
  width: 100%;
  height: 100%;
}
.art_content_main{
  margin-top: 2vw;
  width: 100%;
}
.art_content_title{
  width: 100%;
  color: #333;
  font-size: 4.3vw;
  line-height: 5.9vw;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.art_bottom_box{
  width: 100%;
  margin-top: 2vw;
  overflow: hidden
}
.art_bottom_box .art_number{
  float: right;
  height: auto;
  overflow: hidden;
}
.number_list image{
  width: 3.73vw;
  height: 3.73vw;
  vertical-align: middle;
  padding-right: 1vw;
}
.number_list text{
  font-size: 3.2vw;
  color: #999;
}
.art_number .number_list{
  float: left;
  margin-left: 4vw;
  height: auto;
  line-height:4.3vw;
}
.art_bottom_box .art_from{
  float: left;
  font-size: 3.2vw;
  color: #999
}
.little_content .art_leftt_img{
  width: 38.9%;
  height: 26.1vw;
  border-radius: 4.3vw;
  overflow: hidden;
  float: left;
  background: #ccc;
}
.art_leftt_img image{
  width: 100%;
  height: 100%
}
.art_right_img{
  margin-left: 41%;
  height: 26.1vw;
  overflow: hidden;
  position: relative
}
.art_right_title{
  color:#333;
  font-size:4.3vw;
  line-height:5.9vw;
  word-break:break-all;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.art_botm_box{
  position: absolute;
  bottom: 0;
  height: 4.8vw;
  line-height: 4.8vw;
  width:100%;
}
.art_botm_box .art_bottom_zan image{
  width: 3.73vw;
  height: 3.73vw;
  
}
.art_botm_box .art_bottom_zan text{
  color: #999;
  font-size: 3.2vw;
  padding-left: 1vw
}
.art_bottom_left{
  float: left;
  color: #999;
  font-size: 3.2vw;
}
.art_bottom_right{
  float: right
}
.art_bottom_zan{
  float: left;
  margin-left: 1vw
}
/* 打开app */
.open_app{ 
  width: 32.5%;
  height: 11.7vw;
  line-height: 11.7vw;
  text-align: center;
  background: #060606;
  color: #FFD98B;
  position: fixed;
  right: 0;
  bottom: 39.2vw;
  font-size: 4.3vw;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;
}

.art_content_img .video-play-btn{
  width: 16vw;
  height: 16vw;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -8vw;
  margin-top: -8vw;
}
/* 搜索框 */
.search_top_fixed{
  position: fixed;
  top: 11.7vw;
  width: 100%;
  height: auto;
  z-index: 999;
  background: #ffffff;
}
.index_search_box{
  width: 92%;
  height: 9.6vw;
  line-height: 9.6vw;
  margin: 5.3vw auto;
  background: #f6f6f6;
  border-radius: 4.8vw;
  position: relative;
}
.index_search_box image{
  width: 3.2vw;
  height: 3.2vw;
  position: absolute;
  left: 6.7vw;
  top: 3.2vw;
}
.index_search_box input{
  width: 87%;
  height: 100%;
  border-radius: 4.8vw;
  padding-left: 13%;
  font-size: 3.2vw;
}