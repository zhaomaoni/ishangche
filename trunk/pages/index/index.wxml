  <!-- 视频资讯 -->
<view class="art_main" wx:elif="{{currentTab==1}}">
  <view class="art_content_box" wx:for="{{list}}" wx:key="index" wx:for-index="idx" data-index="{{item.informationId}}">
    <view class="art_content_img">
      <video wx:if='{{idx==playIndex}}' 
            id='video{{idx}}' 
            autoplay='{{true}}' 
            show-center-play-btn="{{false}}" 
            controls="true" 
            objectFit="cover"
            auto-pause-if-navigate="{{true}}"
            src="{{item.videoAddress}}"></video>
            <image class='video-cover' wx:if='{{idx!=playIndex}}' mode='widthFix' src='{{item.informationPhoto}}'></image>
            <image class='video-play-btn' wx:if='{{idx!=playIndex}}' mode='widthFix' data-index='{{idx}}' bindtap='videoPlay' src='../../images/icon_play.png'></image>
    </view>
    <view class="art_content_main" bindtap='navigatorFn2' data-index="{{item.informationId}}">
      <view class="art_content_title">{{item.informationTitle}}</view>
      <view class="art_bottom_box">
        <view class="art_number">
          <view class="number_list look_box">
            <image mode='aspectFit' src="../../images/icon_eye.png"/>
            <text>{{item.pageViews}}</text>
          </view>
          <view class="number_list ping_box">
            <image mode='aspectFit' src="../../images/icon_ping1.png"/>
            <text>{{item.comments}}</text>
          </view>
          <view class="number_list zan_box">
            <image mode='aspectFit' src="../../images/icon_zan1.png"/>
            <text>{{item.likes}}</text>
          </view>
        </view>
        <view class="art_from">{{item.enterpriseName}}</view>
      </view>
    </view>
  </view>
</view>
