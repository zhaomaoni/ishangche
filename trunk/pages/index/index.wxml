<view class="art_header">
  <view class="art_img">
    <navigator url="../mine/mine">
      <image src='{{userLogo}}'></image>
    </navigator>
  </view>
  <view class="art_lis">
    <text 
      wx:for="{{header}}"
      data-idx="{{index}}" 
      wx:key="index" 
      class="{{currentTab==index ? 'active' : ''}}" 
      bindtap="currentBtn">{{item}}</text>
  </view>
</view>
<!-- 搜索框 -->
<view class="index_search_box">
  <image src="../../images/icon_search.png"/>
