/* pages/search/search.wxss */
.search_head_box{
  width: 85%;
  margin: 0 auto;
  background: #f6f6f6;
  height: 9.6vw;
  line-height: 9.6vw;
  border-radius: 4.8vw;
  display: flex;
  margin-bottom: 5vw;
}
.search_head_box image{
  width: 3.2vw;
  height: 3.2vw;
  margin: 3.2vw 1.3vw 3.2vw 6.7vw;
}
.search_head_box input{
  flex: 1;
  height: 100%;
  font-size: 3.2vw;
  color: #333;
}
/* 搜索详情展示 */
.content_main_box{
  width: 92%;
  margin: 0 auto;
  height: auto;
  overflow: hidden;
  margin-bottom:5vw;
}
.main_pic_box{
  width: 100%;
  height: 52vw;
  border-radius: 4.27vw;
  overflow: hidden;
  margin-bottom: 2.7vw;
  position: relative
}
.main_pic_box image{
  width: 100%;
  height: 100%;
}
.main_pic_box .video-play-btn{
  width: 16vw;
  height: 16vw;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -8vw;
  margin-top: -8vw;
}
.main_title_box{
  width: 100%;
  color: #333;
  font-size: 4.3vw;
  line-height: 5.9vw;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.main_number_box{
  width: 100%;
  overflow: hidden;
  height: 4.5vw;
  color: #999999;
  font-size: 3.2vw;
  margin-top: 1.5vw;
}
.main_number_box .main_from{
  float: left;
}
.main_number_box .number_type{
  float: right
}
.number_type .number_msg{
  float: left;
  margin-left: 3vw;
  line-height: 3.72vw;
}
.number_msg image{
  width: 3.72vw;
  height: 3.73vw;
  vertical-align: middle;
}
/* 没有搜索到内容提示 */
.search_no_box{
  width: 92%;
  height: 5vw;
  line-height: 5vw;
  margin: 0 auto;
  margin-bottom: 5vw;
}
.search_no_box image{
  width: 3.73vw;
  height: 3.73vw;
}
.search_no_box text{
  font-size: 3.73vw;
  color: #666;
}